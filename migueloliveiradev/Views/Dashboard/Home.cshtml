@using migueloliveiradev.ViewsModel;
@model HomeDashboardViewModel
@{
    Layout = "_LayoutDashboard";
    ViewData["title"] = "Home";
}
<style>
    .card {
        height: 100px;
        border: none;
        border-radius: 10px;
    }

    .cards {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        grid-gap: 1rem;
    }
</style>
<nav class="navbar navbar-expand-lg bg-body-tertiary" style="width: 100%; background-color: #000814 !important;">
    <p class="navbar-brand text-light p-0 m-3">Dashboard administrativa</p>
</nav>
<div class="cards p-3">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Total de projetos</h5>
            <p class="card-text">@Model.ProjectsCount</p>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Total de projetos trabalhando </h5>
            <p class="card-text">@Model.ProjectsWorkingCount</p>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Total de contatos recebidos</h5>
            <p class="card-text">@Model.ContactsCount</p>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Total de contatos não respondidos</h5>
            <p class="card-text">@Model.ContactsUnreadCount</p>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Total de redes sociais</h5>
            <p class="card-text">@Model.SocialNetworksCount</p>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Total Tecnologias cadastradas</h5>
            <p class="card-text">@Model.TechnologiesCount</p>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Total de servicos</h5>
            <p class="card-text">@Model.ServicesCount</p>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Campo a ser definido</h5>
            <p class="card-text">teste</p>
        </div>
    </div>
</div>