@using migueloliveiradev.Models.Network;
@model IEnumerable<SocialNetwork>
@{
    Layout = "_LayoutDashboard";
    ViewData["title"] = "Redes Sociais";
}
<nav class="navbar navbar-expand-lg bg-body-tertiary" style="width: 100%; background-color: #000814 !important;">
    <p class="navbar-brand text-light p-0 m-3">Cadastro de Redes Sociais</p>
</nav>
<div class="card p-3 m-3" style="background-color: #FAF3F0 !important;">
    <table class="table table-hover table-responsive">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">Nome</th>
                <th scope="col">Url</th>
                <th scope="col">Class Icon</th>
                <th scope="col">Opções</th>
            </tr>
        </thead>
        <tbody>
            @foreach (SocialNetwork rede in Model)
            {
                <tr>
                    <th><i class="w-25 h-25 @rede.Icon fa-2xl"></i></th>
                    <td>@rede.Nome</td>
                    <td>@rede.Url</td>
                    <td>@rede.Icon</td>
                    <td>
                        <button type="button" class="btn">Editar</button>
                        <a class="btn" asp-action="Delete" asp-controller="Social" asp-route-id="@rede.Id">Excluir</a>
                    </td>
                </tr>
            }
            @if (!Model.Any())
            {
                <tr>
                    <th colspan="5">Nenhuma rede social cadastrada.</th>
                </tr>
            }

        </tbody>
    </table>
</div>
<div class="position-absolute top-3 end-0 m-3">
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Adicionar
</button>
</div>
<partial name="Components\Add.cshtml" model="null" />

