@using migueloliveiradev.Models.Works.Projetos;
@model Project
@{
    Layout = "_LayoutDashboard";
}
<nav class="navbar navbar-expand-lg bg-body-tertiary" style="width: 100%; background-color: #000814 !important;">
    <p class="navbar-brand text-light p-0 m-3">Edição de Projetos</p>
</nav>
<div class="card m-3">
    <div class="card-body">
        <form asp-action="Edit" asp-controller="Projects" asp-route-id="@Model.Id" method="post">
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Titulo</label>
                    <input asp-for="Titulo" type="text" class="form-control" placeholder="Escreva o titulo do projeto" id="input-title" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Subtitulo</label>
                    <input asp-for="SubTitulo" type="text" class="form-control" placeholder="Escreva o subtitulo do projeto" id="input-subject" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Descrição</label>
                    <textarea asp-for="Descricao" class="form-control" placeholder="Escreva a descrição do projeto" id="input-description" required required style="height: 130px;"></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label">Url</label>
                    <input asp-for="Url" type="text" class="form-control" placeholder="Escreva a url do projeto" id="input-url" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Url Linkedin</label>
                    <input asp-for="UrlLinkedin" type="text" class="form-control" placeholder="Escreva a url do linkedin do projeto" id="input-url-linkedin" />
                </div>
                <div>
                    <label class="form-label">Url Github</label>
                    <input asp-for="UrlGithub" type="text" class="form-control" placeholder="Escreva a url do github do projeto" id="input-url-github" />
                </div>

            </div>

            <div class="modal-footer">
                <button type="reset" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
        </form>
    </div>
</div>